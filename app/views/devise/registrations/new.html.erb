<h1 class="h1-title">TaskBuster</h1>
<div class="auth-container">
  <h1>Sign Up</h1>
  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "auth-form" do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: "form-control rounded-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: "form-control rounded-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "form-control rounded-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign Up", class: "btn btn-primary btn-rounded" %>
    </div>
  <% end %>

  <p>Already have an account? <%= link_to "Login", new_user_session_path %></p>
</div>