<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :description %>
    <%= form.text_area :description, rows: "3", class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :due_date %>
    <%= form.datetime_local_field :due_date, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['pending', 'complete'], @task.status), {}, { class: "form-control" } %>
  </div>

  <div class="mt-3">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>