<div class="d-flex justify-content-center mt-5">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">State: <%= @task.status %></h6>
      <p class="card-text"><%= @task.description %></p>
      <%= link_to "Edit task", edit_task_path(@task), class: "card-link" %>
      <%= form_with model: @task, url: task_path(@task), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this task?" }, class: "d-inline" do %>
        <%= submit_tag "Delete task", class: "card-link" %>
      <% end %>
      <a href="\tasks" class="card-link">Home</a>
    </div>
  </div>
</div>
